<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#4A2469"
        android:padding="@dimen/cover_padding_login"
        >
        
	      <TextView
	        android:id="@+id/page_title"
	        android:layout_marginTop="@dimen/title_margin_top_login"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:textStyle="bold"
	        android:textSize="@dimen/title_font_size_login"
	        android:typeface="sans"
	        android:textColor="#FFFFFF"
	        android:shadowRadius="2.0"
	        android:layout_gravity="center"
	         />

	
	      <LinearLayout
	        android:layout_marginTop="@dimen/sub_cover_margin_top_login"
	        android:id="@+id/pw"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:orientation="vertical"
	        android:background="@drawable/btn_white_matte" >   
	        
	     
	        <LinearLayout 
	        android:gravity="center_vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/edit_text_height"
	        android:orientation="horizontal"
	        android:layout_weight="2">   
	      
	        <EditText
	            android:id="@+id/loginEmail"
	            android:layout_weight="2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="Email"
	            android:textSize="@dimen/edit_text_text_size"
	            android:textColor="@android:color/black"
	            android:paddingLeft="5dp"/>
	        <ImageView
	        android:id="@+id/cross"
	        android:layout_width="@dimen/clear_image_width"
	        android:layout_height="@dimen/clear_image_height"
	        android:visibility="invisible"
	        android:src="@drawable/cross" />
	        </LinearLayout>
	        <View
	        android:id="@+id/imageView1"
	        android:layout_weight="0.1"
	        android:background="@android:color/darker_gray"
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"
	        />
	        
	        <LinearLayout 
	        android:gravity="center_vertical"
	        android:layout_width="fill_parent"
	        android:layout_height="@dimen/edit_text_height"
	        android:orientation="horizontal"
	        android:layout_weight="2">   
	        <EditText
	            android:id="@+id/loginPassword"
	            android:layout_weight="2"
	            android:layout_width="fill_parent"
	            android:layout_height="wrap_content"
	            android:background="@null"
	            android:hint="Password"
	            android:textSize="@dimen/edit_text_text_size"
	            android:textColor="@android:color/black"
	            android:paddingLeft="5dp"/>
	        <ImageView
	        android:id="@+id/cross1"
	        android:visibility="invisible"
	        android:layout_width="@dimen/clear_image_width"
	        android:layout_height="@dimen/clear_image_height"
	        android:src="@drawable/cross" />
	        </LinearLayout>
	     </LinearLayout>  
	     	<!--  Error message -->
	        
	       	<Button
	       	    
	            android:id="@+id/btnLogin"
	            android:layout_width="fill_parent"
	            android:layout_height="@dimen/edit_text_height"
	            android:layout_marginTop="20dp"
	            android:background="@drawable/layer"
	            android:textColor="@android:color/black"
	            />
	       	
	       	<ProgressBar
		        android:id="@+id/progressbar"
		        style="@android:attr/progressBarStyleLargeInverse"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:visibility="invisible"
		        android:layout_gravity="center_horizontal"
			/>
</LinearLayout>
 

 
